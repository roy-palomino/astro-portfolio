---
interface Props {
  title?: string;
  description?: string;
  bgColorClass?: string;
  titleColor?: string;
  descriptionColor?: string;
  id?: string;
}

const {
  title,
  description,
  bgColorClass = "bg-white",
  titleColor,
  descriptionColor,
  id,
} = Astro.props;
---

<section
  id={id}
  class:list={[
    bgColorClass,
    "flex flex-col space-y-10 px-4 py-16 items-center",
  ]}
>
  <div class="flex flex-col">
    {
      title && (
        <h2
          class:list={[
            "text-center text-5xl font-semibold mb-6 md:text-6xl",
            titleColor || "text-accent",
          ]}
        >
          {title}
        </h2>
      )
    }
    {
      description && (
        <p
          class:list={[
            "text-lg font-normal md:text-xl md:max-w-xl",
            descriptionColor || "text-slate-500",
          ]}
        >
          {description}
        </p>
      )
    }
  </div>
  <div class="flex flex-col w-full space-y-12 items-center">
    <slot />
  </div>
</section>
