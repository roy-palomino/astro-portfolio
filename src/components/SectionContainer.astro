---
interface Props {
  title?: string;
  description?: string;
  bgColorClass?: string;
}

const { title, description, bgColorClass = "bg-white" } = Astro.props;
---

<div class:list={[bgColorClass, "flex flex-col space-y-12 px-4 py-16"]}>
  {
    title && (
      <h2 class="text-accent text-center text-5xl font-semibold">{title}</h2>
    )
  }
  {
    description && (
      <p class="text-lg font-normal text-slate-600">{description}</p>
    )
  }
  <div class="flex flex-col space-y-12 items-center">
    <slot />
  </div>
</div>
