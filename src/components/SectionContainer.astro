---
interface Props {
  title?: string;
  description?: string;
  bgColorClass?: string;
  titleColor?: string;
  descriptionColor?: string;
  id?: string;
}

const {
  title,
  description,
  bgColorClass = "bg-white",
  titleColor,
  descriptionColor,
  id,
} = Astro.props;
---

<section id={id} class:list={[bgColorClass, "flex flex-col space-y-12 px-4 py-16"]}>
  {
    title && (
      <h2
        class:list={[
          "text-center text-5xl font-semibold",
          titleColor || "text-accent",
        ]}
      >
        {title}
      </h2>
    )
  }
  {
    description && (
      <p
        class:list={[
          "text-lg font-normal",
          descriptionColor || "text-slate-600",
        ]}
      >
        {description}
      </p>
    )
  }
  <div class="flex flex-col space-y-12 items-center">
    <slot />
  </div>
</section>
